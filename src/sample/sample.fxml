    <Label id="label" text="G" AnchorPane.leftAnchor="70" AnchorPane.topAnchor="50"/>
    <TextField fx:id="gColorInput" prefWidth="35" AnchorPane.leftAnchor="85" AnchorPane.topAnchor="50"/>
    <Label id="label" text="B" AnchorPane.leftAnchor="130" AnchorPane.topAnchor="50"/>
