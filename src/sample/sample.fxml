    <Label id="label" text="H" AnchorPane.leftAnchor="5" AnchorPane.topAnchor="95"/>
    <TextField fx:id="hColorInput" prefWidth="35" AnchorPane.leftAnchor="25" AnchorPane.topAnchor="95"/>
    <Label id="label" text="S" AnchorPane.leftAnchor="70" AnchorPane.topAnchor="95"/>
    <TextField fx:id="sColorInput" prefWidth="35" AnchorPane.leftAnchor="85" AnchorPane.topAnchor="95"/>
    <Label id="label" text="B" AnchorPane.leftAnchor="130" AnchorPane.topAnchor="95"/>
    <TextField fx:id="lColorInput" prefWidth="35" AnchorPane.leftAnchor="145" AnchorPane.topAnchor="95"/>

    <Button text="Convert" fx:id="btn" onAction="#onClick" prefWidth="100" AnchorPane.leftAnchor="270" AnchorPane.topAnchor="95"/>
    <Button text="Clear" fx:id="clear" onAction="#clearFields" prefWidth="50" AnchorPane.leftAnchor="210" AnchorPane.topAnchor="95"/>

    <Circle fx:id="colorCircle" stroke="black" fill="wheat" radius="40" AnchorPane.leftAnchor="250" AnchorPane.topAnchor="0">

    </Circle>
</AnchorPane>